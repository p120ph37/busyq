--- /dev/null
+++ busybox-1.37.0/scripts/gen_busyq_applets.sh
@@ -0,0 +1,59 @@
+#!/bin/sh
+# gen_busyq_applets.sh - Generate busybox_applets.h for busyq
+#
+# Reads busybox's compiled applet table and generates a header file
+# with BUSYQ_BB_APPLET() entries for each enabled applet.
+#
+# Usage: ./gen_busyq_applets.sh <busybox-build-dir> <output-file>
+
+set -eu
+
+BB_DIR="${1:-.}"
+OUT="${2:-busybox_applets.h}"
+
+cat > "$OUT" << 'EOF'
+/*
+ * busybox_applets.h - Generated list of enabled busybox applets
+ *
+ * AUTO-GENERATED by gen_busyq_applets.sh - DO NOT EDIT
+ *
+ * Each entry is: BUSYQ_BB_APPLET(name, main_func, flags)
+ * where flags is 0 or BUSYQ_APPLET_NOFORK or BUSYQ_APPLET_NOEXEC
+ */
+EOF
+
+# Parse busybox's include/applets.h which contains the canonical
+# list of applets with their properties. Each enabled applet has
+# an IF_xxx(APPLET...) or IF_xxx(APPLET_NOFORK...) entry.
+#
+# We grep for the generated applet_tables[] in the build output,
+# or parse the applets.h with the config applied.
+
+# Method: parse the generated include/applet_tables.h from the build
+if [ -f "$BB_DIR/include/applet_tables.h" ]; then
+    # This file contains lines like:
+    #   "awk\0"          /* 0 */
+    # and the applet_main[] array with function pointers.
+    # We extract applet names and their NOFORK status from applets.h
+
+    # Simpler approach: grep applets.h for enabled applets
+    grep -E '^\s*(APPLET|APPLET_NOFORK|APPLET_NOEXEC)\(' \
+        "$BB_DIR/include/applets.h" 2>/dev/null | \
+    while IFS= read -r line; do
+        case "$line" in
+            *APPLET_NOFORK*)
+                name=$(echo "$line" | sed 's/.*APPLET_NOFORK(\([^,]*\),.*/\1/')
+                func="${name}_main"
+                echo "BUSYQ_BB_APPLET(\"$name\", bb_${func}, BUSYQ_APPLET_NOFORK)"
+                ;;
+            *APPLET_NOEXEC*)
+                name=$(echo "$line" | sed 's/.*APPLET_NOEXEC(\([^,]*\),.*/\1/')
+                func="${name}_main"
+                echo "BUSYQ_BB_APPLET(\"$name\", bb_${func}, BUSYQ_APPLET_NOEXEC)"
+                ;;
+            *APPLET\(*)
+                name=$(echo "$line" | sed 's/.*APPLET(\([^,]*\),.*/\1/')
+                func="${name}_main"
+                echo "BUSYQ_BB_APPLET(\"$name\", bb_${func}, 0)"
+                ;;
+        esac
+    done >> "$OUT"
+else
+    echo "ERROR: $BB_DIR/include/applet_tables.h not found." >&2
+    echo "Build busybox first, then run this script." >&2
+    exit 1
+fi
+
+echo "Generated $OUT with $(grep -c BUSYQ_BB_APPLET "$OUT") applets"
